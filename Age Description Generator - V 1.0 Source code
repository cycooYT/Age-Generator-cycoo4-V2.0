#cancel option added 9-27-21

isCorrectInput = False

while isCorrectInput == False:
    
    val = input("To cancel, type 1. To continue, press 2: ")

    if val == ("1"):
        print("Cancelling...")
        time.sleep(0.5)
        exit(0)

    if val == ("2"): isCorrectInput = True


